<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_item_padding"
    android:paddingRight="@dimen/list_item_padding" >

    <RelativeLayout
        android:id="@+id/body_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/list_item_selector"
        android:descendantFocusability="blocksDescendants" >

        <LinearLayout
            android:id="@+id/photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/photo_img"
                android:layout_width="@dimen/photo_size"
                android:layout_height="@dimen/photo_size"
                android:src="@drawable/photo_selector" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/call_view"
            android:layout_width="@dimen/list_item_height"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_item_selector"
            android:src="@drawable/list_phone_selector" />

        <View
            android:id="@+id/div_item_call"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@id/call_view"
            android:background="@color/div_line_color" />

        <RelativeLayout
            android:id="@+id/call_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/div_item_call"
            android:layout_toRightOf="@id/photo_layout" >

            <RelativeLayout
                android:id="@+id/name_time_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" >

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/time_text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/number_type_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_time_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp" >

                <ImageView
                    android:id="@+id/type_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/call_list_incoming" />

                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/type_view"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/div_line_view"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/body_layout"
        android:layout_centerHorizontal="true"
        android:background="@color/div_line_color" />

</RelativeLayout>