    <!-- 联系人应用主题:黑色 -->
    <style name="Theme.Contacts.Black" parent="@style/BaseAppTheme">
        <item name="ContactsAppStyle">@style/BlackContactsApp</item>
    </style>

    <style name="BlackContactsApp">

        <!-- themeColor -->
        <item name="themeColor">@color/theme_black</item>
        <!-- 页面标题栏文字颜色 -->
        <item name="titleColor">@color/white</item>
        <!-- 联系人搜索栏左图标 -->
        <item name="contactsSearchLeftIcon">@drawable/ic_search_blue</item>
        <!-- 联系人搜索栏清除图标 -->
        <item name="contactsSearchCleanIcon">@drawable/ic_clean_blue</item>
    </style>

