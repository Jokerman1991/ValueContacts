        <item name="smartBarSettingsIcon">@drawable/ic_tab_settings_black</item>
        <item name="smartBarMoreIcon">@drawable/ic_tab_more_black</item>
        <item name="titleColor">@color/black</item>
        <!-- 联系人搜索栏左图标 -->
        <item name="contactsSearchLeftIcon">@drawable/ic_search_blue</item>
        <!-- 联系人搜索栏清除图标 -->
        <item name="contactsSearchCleanIcon">@drawable/ic_clean_blue</item>
        <!-- 粘贴号码图标 -->
        <item name="pasteNumIcon">@drawable/ic_paste_dark</item>
        <!-- 复制号码图标 -->
        <item name="copyNumIcon">@drawable/ic_copy_dark</item>
